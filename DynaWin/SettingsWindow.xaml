<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DynaWin"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        x:Class="DynaWin.SettingsWindow"
        mc:Ignorable="d"
        Title="DynaWin Settings" Height="800" Width="1200" ui:WindowHelper.UseModernWindowStyle="True" 
        Icon="pack://siteoforigin:,,,/Resources/icon.ico" MinHeight="800" MinWidth="1000" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid>
        <ui:NavigationView IsBackEnabled="False" IsSettingsVisible="True" IsBackButtonVisible="Collapsed" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,0,0,0" PaneDisplayMode="Auto" x:Name="NavigationView" SelectionChanged="NavigationView_SelectionChanged" ItemInvoked="NavigationView_ItemInvoked" >
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="Dynamic Wallpaper" x:Name="DynamicWallpaperItem">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEB9F;"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem Content="Dynamic Theme" x:Name="DynamicThemeItem">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE771;"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem Content="Daily Bing Image as Desktop Wallpaper" x:Name="DailyBingImageAsDesktopItem">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8B9;"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>

            <TabControl x:Name="NavigationFrame" Margin="0,0,0,0" Background="#00000000">
                <TabItem Header="Dynamic Wallpaper" x:Name="DynamicWallpaperItemContent" >
                    <Grid>
                        <Label Content="Dynamic Wallpaper" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="22"/>
                        <Label Content="Enable Dynamic Wallpaper" HorizontalAlignment="Left" Margin="10,82,0,0" VerticalAlignment="Top" FontSize="14"/>
                        <Label Content="Automatically switch your desktop wallpaper at specified timings" HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top" FontSize="13"/>
                        <ui:ToggleSwitch x:Name="WallpaperToggle" VerticalAlignment="Top" Margin="10,106,0,0" Toggled="WallpaperToggle_Toggled" Width="85" />

                        <Grid Margin="0,143,0,0" x:Name="WallpaperGrid">
                            <Label Content="Change wallpaper by:" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" FontWeight="Bold"/>
                            <RadioButton HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,46,0,0" Content="Time" x:Name="TimeRadButton" FontSize="14" />
                            <RadioButton HorizontalAlignment="Left" VerticalAlignment="Top" Margin="95,46,0,0" Content="Theme" x:Name="ThemeRadButton" FontSize="14"/>
                            <RadioButton HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,46,0,0" Content="Battery" x:Name="BatteryRadButton" FontSize="14"/>

                            <TabControl x:Name="WallpaperTabControl" Margin="10,138,10,10" Background="Transparent">

                                <TabItem Header="Time">

                                    <Grid>

                                        <TabControl x:Name="TimeTab" SelectedIndex="0" Margin="5,0,0,0" >

                                            <TabControl.Template>
                                                <ControlTemplate TargetType="{x:Type TabControl}">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition/>
                                                        </Grid.RowDefinitions>
                                                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                                                            <TabPanel x:Name="HeaderPanel" IsItemsHost="True" Margin="0,4,0,0" Height="40" Background="#4C808080" />
                                                        </ScrollViewer>
                                                        <ContentPresenter x:Name="PART_SelectedContentHost" Margin="4" ContentSource="SelectedContent" Grid.Row="1"/>
                                                    </Grid>
                                                </ControlTemplate>
                                            </TabControl.Template>

                                            <TabItem Header="12 AM">
                                                <Grid>
                                                    <Label HorizontalAlignment="Center" VerticalAlignment="Top" Content="12 AM" FontWeight="Bold" FontSize="18"/>
                                                    <Label Content="At 12 AM, the wallpaper will be changed to the image above" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,265,0,0"/>
                                                    
                                                    <Border Margin="0,35,0,0" Background="#33808080" Width="400" Height="225" VerticalAlignment="Top">
                                                        <Image x:Name="_12AMImage" Stretch="Fill"/>
                                                    </Border>
                                                    
                                                    <Button Content="Add/Change wallpaper" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,296,0,0" Style="{StaticResource AccentButtonStyle}"/>
                                                    <Button Content="Remove wallpaper" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,344,0,0" Style="{StaticResource AccentButtonStyle}"/>
                                                </Grid>
                                            </TabItem>

                                            <TabItem Header="1 AM">
                                                <Grid/>
                                            </TabItem>

                                            <TabItem Header="2 AM">
                                                <Grid/>
                                            </TabItem>

                                            <TabItem Header="3 AM">
                                                <Grid/>
                                            </TabItem>

                                            <TabItem Header="4 AM">
                                                <Grid/>
                                            </TabItem>

                                            <TabItem Header="5 AM">
                                                <Grid/>
                                            </TabItem>

                                            <TabItem Header="6 AM">
                                                <Grid/>
                                            </TabItem>

                                            <TabItem Header="7 AM">
                                                <Grid/>
                                            </TabItem>

                                            <TabItem Header="8 AM">
                                                <Grid/>
                                            </TabItem>

                                            <TabItem Header="9 AM">
                                                <Grid/>
                                            </TabItem>

                                            <TabItem Header="10 AM">
                                                <Grid/>
                                            </TabItem>

                                            <TabItem Header="11 AM">
                                                <Grid/>
                                            </TabItem>

                                            <TabItem Header="12 PM">
                                                <Grid/>
                                            </TabItem>

                                            <TabItem Header="1 PM">
                                                <Grid/>
                                            </TabItem>

                                            <TabItem Header="2 PM">
                                                <Grid/>
                                            </TabItem>

                                            <TabItem Header="3 PM">
                                                <Grid/>
                                            </TabItem>

                                            <TabItem Header="4 PM">
                                                <Grid/>
                                            </TabItem>

                                            <TabItem Header="5 PM">
                                                <Grid/>
                                            </TabItem>

                                            <TabItem Header="6 PM">
                                                <Grid/>
                                            </TabItem>

                                            <TabItem Header="7 PM">
                                                <Grid/>
                                            </TabItem>

                                            <TabItem Header="8 PM">
                                                <Grid/>
                                            </TabItem>

                                            <TabItem Header="9 PM">
                                                <Grid/>
                                            </TabItem>

                                            <TabItem Header="10 PM">
                                                <Grid/>
                                            </TabItem>

                                            <TabItem Header="11 PM">
                                                <Grid/>
                                            </TabItem>


                                        </TabControl>

                                    </Grid>

                                </TabItem>

                                <TabItem Header="Theme">
                                    <Grid>

                                    </Grid>
                                </TabItem>

                                <TabItem Header="Battery">
                                    <Grid>

                                    </Grid>
                                </TabItem>

                            </TabControl>
                            <Label Content="Wallpapers:" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,104,0,0"/>
                        </Grid>
                        <TextBlock x:Name="DynamicWallpaperDisableLabel" Text="Dynamic Wallpaper cannot be turned on when using Daily Bing Image as Desktop Wallpaper." HorizontalAlignment="Left" Margin="100,113,0,0" VerticalAlignment="Top" Foreground="#FFCB3124" TextWrapping="Wrap"/>
                    </Grid>
                </TabItem>

                <TabItem Header="Dynamic Theme" x:Name="DynamicThemeItemContent" >
                    <Grid>
                        <Label Content="Dynamic Theme" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="22"/>
                        <Label Content="Enable Dynamic Theme" HorizontalAlignment="Left" Margin="10,82,0,0" VerticalAlignment="Top" FontSize="14"/>
                        <Label Content="Automatically switch between light theme and dark theme. When enabled, Dynamic Theme will change both the system theme and the app theme." HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top" FontSize="13" />
                        <ui:ToggleSwitch x:Name="ThemeToggle" VerticalAlignment="Top" Margin="10,106,0,0" Toggled="ThemeToggle_Toggled" />

                        <Grid Margin="0,143,0,0" x:Name="ThemeGrid">
                            <local:TimePicker x:Name="LightThemeTimePicker" Margin="10,34,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <Label Content="Switch to Light Theme at:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                            <Label Content="Switch to Dark Theme at:" HorizontalAlignment="Left" Margin="10,91,0,0" VerticalAlignment="Top"/>
                            <local:TimePicker x:Name="DarkThemeTimePicker" HorizontalAlignment="Left" Margin="10,114,0,0" VerticalAlignment="Top"/>
                        </Grid>

                    </Grid>
                </TabItem>

                <TabItem Header="Daily Bing Image as Desktop Wallpaper" x:Name="DailyBingImageAsDesktopItemContent" >
                    <Grid>
                        <Label Content="Daily Bing Image as Desktop Wallpaper" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="22"/>
                        <Label Content="Use Daily Bing Image as Desktop Wallpaper:" HorizontalAlignment="Left" Margin="10,82,0,0" VerticalAlignment="Top" FontSize="14"/>
                        <Label Content="Automatically download and set the daily Bing Image as your desktop wallpaper" HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top" FontSize="13"/>
                        <ui:ToggleSwitch x:Name="BingToggle" VerticalAlignment="Top" Margin="10,106,0,0" Toggled="BingToggle_Toggled" Width="85"/>
                        <TextBlock x:Name="BingWallpaperDisableLabel" Text="Daily Bing Image cannot be used as Desktop Wallpaper when Dynamic Wallpaper is enabled." HorizontalAlignment="Left" Margin="100,113,0,0" VerticalAlignment="Top" Foreground="#FFCB3124" TextWrapping="Wrap"/>

                        <Grid Margin="0,143,0,0" x:Name="BingGrid">
                            <Button Content="Test"/>
                        </Grid>
                    </Grid>
                </TabItem>

                <TabItem Header="Settings" x:Name="SettingsItemContent" >
                    <Grid>
                        <Label Content="Settings"/>
                    </Grid>
                </TabItem>

            </TabControl>
        </ui:NavigationView>



    </Grid>
</Window>

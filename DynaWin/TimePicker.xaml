<UserControl x:Class="DynaWin.TimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DynaWin"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d" Width="215" Height="32" MinHeight="32" MaxHeight="32" MinWidth="215" MaxWidth="215">
    <Grid>
        <ComboBox x:Name="Hours" HorizontalAlignment="Left" VerticalAlignment="Top" Width="65" Margin="0" SelectionChanged="Hours_SelectionChanged" />
        <ComboBox x:Name="AMPM" HorizontalAlignment="Left" Margin="150,0,0,0" VerticalAlignment="Top" Width="65" SelectionChanged="AMPM_SelectionChanged"/>
        <ComboBox x:Name="Minutes" HorizontalAlignment="Left" VerticalAlignment="Top" Width="65" Margin="75,0,0,0" SelectionChanged="Minutes_SelectionChanged" />

        <Grid Height="32" Margin="65,0,145,0" Width="10">
            <Label Content=":" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Height="28" Width="6" FontSize="18"/>
        </Grid>



    </Grid>
</UserControl>
